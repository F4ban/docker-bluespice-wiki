#!/bin/sh

echo ""
echo "#############################################"
echo "Init data directory"

mkdir -p /data/bluespice/{images,logs/pustupdate,extensions/BlueSpiceFoundation/data,_sf_instances,_sf_archive}
mkdir -p /data/simplesamlphp/{cache,certs,data,logs}

path=/data/bluespice
if test -ne $path/pre-init-settings.php ;then
	echo "<?php" > $path/pre-init-settings.php
fi
if test -ne $path/post-init-settings.php ;then
	echo "<?php" > $path/pre-init-settings.php
fi
if test -ne $path/logs/postupdate/README.md ;then
	echo "Do not delete files from this directory!" > $pathh/logs/postupdate/README.md 
fi


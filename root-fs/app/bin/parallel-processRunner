set -o errexit
set -o nounset
set -o pipefail

echo ""
echo "#############################################"
echo "Starting TaskRunner"

appDir=/app/bluespice/w
processRunnerScript=$appDir/vendor/mwstake/mediawiki-component-processmanager/maintenance/processRunner.php

while true; do
        php \
        $processRunnerScript \
        $appDir/maintenance/Maintenance.php \
        --max-processes=100 \
        --wait \
        &
    sleep 60
done

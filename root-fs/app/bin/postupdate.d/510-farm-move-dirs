#!/bin/bash

# In BlueSpice 5, the two FARM directories
# `/data/bluespice/_sf_instances` and `/data/bluespice/_sf_archive`
# have been moved to
# `/data/bluespice/farm-instances` and `/data/bluespice/farm-archive`

if [ "${EDITION}" == "farm" ]; then
	if [ -d /data/bluespice/_sf_instances ]; then
		mv /data/bluespice/_sf_instances /data/bluespice/farm-instances
	fi
	if [ -d /data/bluespice/_sf_archive ]; then
		mv /data/bluespice/_sf_archive /data/bluespice/farm-archive
	fi
fi